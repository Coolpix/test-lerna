{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): release",
      "yes": true
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): release"
    }
  }
}
